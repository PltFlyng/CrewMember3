<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cm3.danielhutchinson.lialpatools.CrewAdviceActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crew Advices"
            android:id="@+id/textView_ui_CrewAdvices_MainHeaderLabel"
            android:textSize="@dimen/abc_text_size_title_material"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Advice"
                    android:id="@+id/button_CrewAdvices_CurrentAdvice" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid From: --\--\---- \nValid To:  --\--\----"
                    android:id="@+id/textView_CrewAdvices_display_currentadvice"
                    android:layout_span="1"
                    android:lines="2"
                    android:gravity="center_vertical|center_horizontal" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Advice Data"
                android:id="@+id/button_CrewAdvices_UpdateData" />
        </TableLayout>

    </LinearLayout>
</LinearLayout>
